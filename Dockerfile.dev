# Development Dockerfile
FROM node:20-bullseye

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy workspace files
COPY pnpm-workspace.yaml pnpm-lock.yaml package.json ./

# Copy all apps and packages
COPY apps ./apps
COPY packages ./packages

# Install dependencies
RUN pnpm install --frozen-lockfile

# Install additional tools (includes media + headless browser stack for mockup captures)
RUN apt-get update && apt-get install -y \
    postgresql-client \
    curl \
    git \
    ffmpeg \
    chromium \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxkbcommon0 \
    libxrandr2 \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Optional: if Playwright exists in workspace deps, pre-install Chromium runtime
RUN if pnpm exec playwright --version >/dev/null 2>&1; then \
      pnpm exec playwright install chromium; \
    else \
      echo "Playwright not found in workspace dependencies; skipping browser bootstrap."; \
    fi

EXPOSE 3000 3001 5432

CMD ["pnpm", "dev"]
