{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"],
      "@/src/*": ["./src/*"],
      "@/components/*": ["./components/*"],
      "@verifactu/auth": ["../../packages/auth/index.ts"],
      "@verifactu/db": ["../../packages/db/index.ts"],
      "@verifactu/integrations": ["../../packages/integrations/index.ts"],
      "@verifactu/ui": ["../../packages/ui/index.tsx"],
      "@verifactu/ui/*": ["../../packages/ui/*", "../../packages/ui/src/*"],
      "@verifactu/utils": ["../../packages/utils/index.ts"]
    },
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "esModuleInterop": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
