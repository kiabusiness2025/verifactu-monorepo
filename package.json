{
  "name": "verifactu-monorepo",
  "private": true,
  "packageManager": "pnpm@10.27.0+sha256.d3c7c3d12d87d177e32f01748d5994fb20cd5becf11670ee60530c374ffeabb3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "node scripts/build-root.mjs",
    "build:debug": "turbo run build --verbosity=debug",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write 'apps/**/*.{ts,tsx,js,jsx,json,md}'",
    "format:check": "prettier --check 'apps/**/*.{ts,tsx,js,jsx,json,md}'",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "build-app-only": "npm --prefix apps/app run build",
    "typecheck": "pnpm -w run typecheck:app && pnpm -w run typecheck:landing",
    "typecheck:app": "pnpm --filter verifactu-app exec tsc --noEmit",
    "typecheck:landing": "pnpm --filter verifactu-landing exec tsc --noEmit",
    "precommit": "bash scripts/pre-commit.sh",
    "install-hooks": "cp scripts/pre-commit.sh .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "check:encoding": "node scripts/check-text-encoding.js apps/app",
    "auto-fix": "node scripts/auto-fix-typescript.js",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run build",
    "validate:all": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run test && pnpm run build",
    "db:migrate:emails": "pwsh scripts/migrate-emails.ps1",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "debug:app": "NODE_OPTIONS=--inspect-brk pnpm dev",
    "debug:tests": "NODE_OPTIONS=--inspect-brk pnpm test -- --watch",
    "deploy:vercel": "curl -X POST https://api.vercel.com/v1/integrations/deploy/prj_ZBVvfBkBG6b4MmSCD9aRQM7QAPAU/9x0EH6QY9J",
    "capture:demo:mockups": "node scripts/capture-demo-mockups.mjs",
    "capture:demo:hero": "node scripts/capture-demo-mockups.mjs --replace-hero"
  },
  "devDependencies": {
    "@next/env": "^16.1.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.2"
  },
  "dependencies": {
    "chai": "^6.2.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-turbo": "^2.6.3",
    "mocha": "^11.7.5",
    "pg": "^8.16.3",
    "supertest": "^7.1.4"
  },
  "pnpm": {
    "overrides": {
      "qs": "^6.14.1",
      "@types/react": "18.3.27",
      "@types/react-dom": "18.3.7",
      "fast-xml-parser": "5.3.4",
      "devalue": "5.6.2",
      "tar": "7.5.7",
      "cookie": "0.7.0",
      "diff": "8.0.3",
        "glob": "10.5.0",
        "@next/swc-win32-x64-msvc": "15.5.12",
        "@next/swc-win32-ia32-msvc": "15.5.12",
        "@next/swc-win32-arm64-msvc": "15.5.12",
        "@next/swc-darwin-x64": "15.5.12",
        "@next/swc-darwin-arm64": "15.5.12",
        "@next/swc-linux-x64-gnu": "15.5.12",
        "@next/swc-linux-x64-musl": "15.5.12",
        "@next/swc-linux-arm64-gnu": "15.5.12",
        "@next/swc-linux-arm64-musl": "15.5.12"
    },
    "onlyBuiltDependencies": [
      "@firebase/util",
      "bcrypt",
      "protobufjs",
      "unrs-resolver",
      "prisma",
      "@prisma/engines",
      "@prisma/client"
    ],
    "ignoredBuiltDependencies": [
      "@swc/core",
      "@verifactu/db",
      "esbuild",
      "sharp"
    ]
  },
  "engines": {
    "node": ">=18.18.0 <21"
  }
}
